@model ProductsBulkUpdateViewModel

<div class="row">
    <div class="col col-lg-4 mx-auto">
        <form asp-area="Admin" asp-controller="Products" asp-action="ProcessBulkUpdate" method="post">
            @* loop over products and show checkboxes *@
            @for (int i = 0; i < Model.Products.Count(); i++)
            {
                <div class="form-group">
                    <input asp-for="@Model.Products[i].IsSelected" class="form-check-inline" />
                    <label asp-for="@Model.Products[i].IsSelected">@Model.Products[i].Text</label>
                    <input asp-for="@Model.Products[i].Value" />
                </div>
            }
            <button type="submit" class="btn btn-primary">Select</button>
        </form>
    </div>
</div>


