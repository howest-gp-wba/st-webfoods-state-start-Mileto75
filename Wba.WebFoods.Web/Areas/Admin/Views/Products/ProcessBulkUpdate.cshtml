@model ProductsProcessBulkUpdateViewModel
<div class="row">
    <div class="col col-lg-10 mx-auto">
        <form asp-area="Admin" asp-controller="Products" asp-action="SaveBulkUpdate" method="post">
            @* loop over products and show edit fields *@
            @for (int i = 0; i < Model.Products.Count(); i++)
            {
                <div class="row">
                    <div class="col">
                        <label asp-for="@Model.Products[i].Name"></label>
                        <input asp-for="@Model.Products[i].Name" class="col form-control">
                        <span class="text-danger" asp-validation-for="@Model.Products[i].Name"></span>
                    </div>
                    <div class="col">
                        <label asp-for="@Model.Products[i].Price"></label>
                        <input asp-for="@Model.Products[i].Price" class="col form-control">
                        <span class="text-danger" asp-validation-for="@Model.Products[i].Price"></span>
                    </div>
                    <div class="col">
                        <label asp-for="@Model.Products[i].CategoryId"></label>
                        <select asp-for="@Model.Products[i].CategoryId" asp-items="@Model.Products[i].Categories" class="col form-control"></select>
                    </div>
                    <input asp-for="@Model.Products[i].Id" class="col form-control">
                </div>
            }
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

